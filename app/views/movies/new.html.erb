<h1>New Movie Page</h1>

<div>
  <h3>3 Step Proccess:</h3>
  <ol>
    <li>Request Form</li>
    <li>Fill out form in browser</li>
    <li>Send another request to submit form information</li>
  </ol>
</div>

<%= form_for @movie do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :genre %>
  <%= f.text_field :genre %>
  <br>
  <%= f.label :release_date %>
  <%= f.number_field :release_date %>
  <br>
  <%= f.label :img_url %>
  <%= f.text_field :img_url %>
  <br>

  <%= f.submit :Submit %>
<% end %>
